<p id="notice"><%= notice %></p>

<h1>Admin Page</h1>

<table class="table table-striped" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Admin</th>
      <th>E-mail</th>
      <th>Tasks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.admin %></td>
        <td><%= user.email %></td>
        <td><%= user.task_count %>
        <td><%= link_to 'Show', [:admin, user] %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

