<p id="notice"><%= notice %></p>
<h1>Tasks</h1>
<!--ここから検索フォーム-->
<div>
  <%= form_with(url: tasks_path, method: :get, local: true) do |f| %>
    <%= f.text_field :name %>
    <%= f.submit "search" %>
  <% end %>
</div>

<!--ここからデータの表示-->
<% def linkage(column, direction) %>
<% arrow = "▲" %>
<% if direction == "desc" %>
<% arrow = "▼" %>
<% end %>
  <%= link_to arrow, sort: column + " " + direction %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Priority <%= linkage("priority","asc") %><%= linkage("priority","desc") %></th>
      <th>Name <%= linkage("name","asc") %><%= linkage("name","desc") %></th>
      <th>Status <%= linkage("status","asc") %><%= linkage("status","desc") %></th>
      <th>Label <%= linkage("label","asc") %><%= linkage("label","desc") %></th>
      <th>Created <%= linkage("created_at","asc") %><%= linkage("created_at","desc") %></th>
      <th>Limit <%= linkage("limit","asc") %><%= linkage("limit","desc") %></th>
      <th>Content <%= linkage("content","asc") %><%= linkage("content","desc") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.priority %></td>
        <td><%= task.name %></td>
        <td><%= task.status %></td>
        <td><%= task.label %></td>
        <td><%= task.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= task.limit %></td>
        <td><%= task.content %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>
<br>
<%= link_to 'New Task', new_task_path %>