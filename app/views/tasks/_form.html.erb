<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :label %>
    <%= form.select :label,["labelA","labelB","labelC"] %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status,["未着手","着手","完了"] %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities.keys %>
  </div>

  <div class="field">
    <%= form.label :task_limit %>
    <%= form.date_field :task_limit, value: Time.now.strftime("%Y年%m月%d日"),
                                  class: 'form-control'%><br>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
