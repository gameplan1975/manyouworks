<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status,["Not Started","Undertake","Complete"] %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities.keys %>
  </div>

  <div class="field">
    <%= form.label :task_limit %>
    <%= form.date_field :task_limit, value: Time.now.strftime("%Y年%m月%d日") %>
  </div>
  
  <div class="field">
    <h3>Label</h3>
    <label class="checkbox-inline">
      <%= form.collection_check_boxes(:label_ids, Label.all, :id, :title) %>
    </label>
  </div>
  <br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
